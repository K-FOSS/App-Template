{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "target": "ES2020",

    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,

    // Debugging
    "sourceMap": false,
    "outDir": "dist",

    "strict": true,
    "strictPropertyInitialization": false,

    // Features
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
