{
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": [":443"],
          "routes": [
            {
              "match": [
                {
                  "path": ["/graphql"]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "API:8080"
                    }
                  ]
                }
              ]
            },
            {
              "match": [
                {
                  "header": {
                    "Sec-WebSocket-Version": ["13"]
                  }
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "UI:8123"
                    }
                  ]
                }
              ]
            },
            {
              "match": [
                {
                  "path_regexp": {
                    "pattern": ".*js"
                  }
                }
              ],
              "handle": [
                {
                  "handler": "file_server",
                  "root": "/app/public/static"
                }
              ]
            },
            {
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "UI:8085"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "tls": {
      "certificates": {
        "load_folders": ["/TLS"]
      }
    }
  }
}
