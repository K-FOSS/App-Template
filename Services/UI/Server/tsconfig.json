{
  "compilerOptions": {
    "target": "ES2020",

    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",

    // Debugging
    "sourceMap": false,
    "outDir": "dist",

    "strict": true,
    "strictPropertyInitialization": false,

    // Features
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react"
  }
}
